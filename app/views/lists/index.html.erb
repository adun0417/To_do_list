

<div class="container col-md-8 col-md-offset-2" tetx:"todolist">
<%= "To Do List" %>
<table class = "table table-striped table-condensed table-bordered">
   <tr>
     <th scope="col">狀態</th>
     <th scope="col">待辦事項</th>
     <th scope="col">截止時間</th>
     <th scope="col">展示</th>
     <th scope="col">編輯</th>
     <th scope="col">刪除</th>
   </tr>

  <% @lists.each do |list| %>
    <tr>
      <td><input type="checkbox"></td>
      <td><%= list.name %></td>
      <td><%= list.due_date %></td>
      <td><%= link_to 'Show', list_path(list) %></td>
      <td><%= link_to 'Edit', edit_list_path(list) %></td>
      <td><%= link_to 'Destroy', list_path(list) , method: :delete,data:{confirm:"Are you sure?" } %></td>
    </tr>
  <% end %>
</table>
<%= link_to '增加待辦事項' , new_list_path %>
</div>
